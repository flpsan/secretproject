include mixin-svg

mixin item(menu)
  each item in menu
    .linha-tipo-2
      .conteudo
        +svg(item.icone)
        a.ml-6(href='/produtos?categoria=' + item.categoria.codigo) #{item.categoria.nome}
      .arrow: +svg('ic_arrow_drop_down_black_18px')
    each subcategoria in item.subcategorias
      .linha-tipo-3
        a.ml-6(href='/produtos?categoria=' + item.categoria.codigo + '&subcategoria='+subcategoria.codigo) #{subcategoria.nome}
        
